<h1>All Domains</h1>
<%= link_to 'Add Domain', new_domain_path %>
<br/><br/>
<table cellpadding='5' cellspacing='0' border='0'>
  <tr>
    <th>Hostname</th>
    <th>IP Address</th>
    <th>Account</th>
    <th>&nbsp;</th>
  </tr>
  <% @domains.each do |domain| %>
    <tr>
      <td><%= domain.hostname %></td>
      <td><%= domain.ip_address %></td>
      <td><%= domain.account.name %></td>
      <td><%= link_to 'Edit', edit_domain_path(domain) %> | <%= link_to 'Delete', domain, method: :delete %></td>
    </tr>
  <% end %>

</table>
